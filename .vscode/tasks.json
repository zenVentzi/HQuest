{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "copy-schemas",
      "type": "npm",
      "script": "copy-schemas"
    },
    {
      "label": "server-build",
      "type": "typescript",
      "tsconfig": "server\\tsconfig.json",
      "options": {
        "shell": {
          "executable": "powershell.exe"
        }
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "BuildServer",
      "dependsOn": ["copy-schemas", "server-build"]
    },
    {
      "type": "typescript",
      "tsconfig": "server\\tsconfig.json",
      "option": "watch",
      "options": {
        "shell": {
          "executable": "powershell.exe"
        }
      },
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}
